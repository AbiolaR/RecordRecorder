<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RecordRecorder">

    <BitmapImage x:Key="HomeIconDark" UriSource="/Images/home-dark.png" />
    <BitmapImage x:Key="HomeIconLight" UriSource="/Images/home-light.png" />
    <BitmapImage x:Key="GearIconDark" UriSource="/Images/gear-dark.png" />
    <BitmapImage x:Key="GearIconLight" UriSource="/Images/gear-light-filled.png" />

    
    <BitmapImage x:Key="HomeIconSource" UriSource="{Binding ApplicationViewModel.HomeIcon, 
                                                                        Source={x:Static local:ViewModelLocator.Instance}, 
                                                                        Converter={local:ApplicationImageSourceConverter}}" />

    <BitmapImage x:Key="GearIconSource" UriSource="{Binding ApplicationViewModel.GearIcon, 
                                                                        Source={x:Static local:ViewModelLocator.Instance}, 
                                                                        Converter={local:ApplicationImageSourceConverter}}" />


</ResourceDictionary>